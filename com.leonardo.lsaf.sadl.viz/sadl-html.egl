                        "width": [%=prevNode.width%], 
                        "height": [%=containerHeight%], 
                        "class":"[%=prevNode.class%]" 
                    },
                    { "id": "[%=node.id%]", 
                        "labels": [{"text": "[%=node.label%]"}],
                        "properties": {
                            "portConstraints": "FIXED_POS"
                        },
[%
